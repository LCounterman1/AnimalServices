@model IEnumerable<AnimalServices.Models.Clinic.ClinicListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Animal Clinics</h2>

<p>
    <center>
    
        <img src="~/Content/Images/clinic.jpg" width="350" height="150" />
        <img src="~/Content/Images/inside.jpg" width="350" height="150" />
        <img src="~/Content/Images/cow.jpg" width="350" height="150" />
    </center>
</p>
<br />
@Html.ActionLink("Create New", "Create")
<br/>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.ClinicId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClinicType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClinicId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClinicType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ClinicId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ClinicId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ClinicId })
            </td>
        </tr>
    }
</table>


